{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyAbbreviation": {
            "type": "string",
  		    "defaultValue": "TW",
  		    "metadata": {
				"description": "2 Character Abbreviation for Company that is Migrating"
			}
        },
		"virtualMachineSize": {
		  "type": "string",
		  "defaultValue": "Standard_DS2_v2",
		  "allowedValues": [
			"Standard_DS2_v2",
			"Standard_DS3_v2"
		  ],
		  "metadata": {
			"description": "Virtual Machine Size (use Default unless known)"
		  }
		},		
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "secureString"
        }
    },
    "variables": {
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-nsg'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', concat('rg-',parameters('companyAbbreviation'),'-j2sp-vnet'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', 'default')]"
    },
    "resources": [
        {
            "name": "[concat('vm-',parameters('companyAbbreviation'),'-j2sp-1253')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-04-01",
            "location": "eastus",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-nsg'))]",
                "[concat('Microsoft.Network/virtualNetworks/', concat('rg-',parameters('companyAbbreviation'),'-j2sp-vnet'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-ip'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-ip'))]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": true,
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        },
        {
            "name": "[concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-nsg')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "eastus",
            "properties": {
                "securityRules": []
            },
            "tags": {}
        },
        {
            "name": "[concat('rg-',parameters('companyAbbreviation'),'-j2sp-vnet')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "eastus",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            },
            "tags": {}
        },
        {
            "name": "[concat('vm-',parameters('companyAbbreviation'),'-j2sp-1-ip')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "eastus",
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            },
            "sku": {
                "name": "Basic"
            },
            "tags": {}
        },
        {
            "name": "[concat('vm-',parameters('companyAbbreviation'),'-j2sp-1')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-04-01",
            "location": "eastus",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1253'))]",
                "[concat('Microsoft.Storage/storageAccounts/', concat('rg',parameters('companyAbbreviation'),'j2spdiag'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('vm-',parameters('companyAbbreviation'),'-j2sp-1253'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat('vm-',parameters('companyAbbreviation'),'-j2sp-1')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', concat('rg',parameters('companyAbbreviation'),'j2spdiag'), '.blob.core.windows.net/')]"
                    }
                }
            },
            "tags": {}
        },
        {
            "name": "[concat('rg',parameters('companyAbbreviation'),'j2spdiag')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-02-01",
            "location": "eastus",
            "properties": {},
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            },
            "tags": {}
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}